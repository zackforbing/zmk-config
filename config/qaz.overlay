          ;
  };

  split_bar_layout: split_bar_layout {
      compatible = "zmk,physical-layout";
      display-name = "Split Bar";
      transform = <&split_bar>;
      kscan = <&kscan0>;
      keys  //                     w   h    x    y     rot    rx    ry
